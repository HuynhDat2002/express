extends ../layouts/common.pug

block content
    h1 User List
    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") New user        
        form.ms-auto(action="/users/search", method='GET',class="d-flex") 
            input(type="search" name="q" placeholder="typing..." value=question,class="form-control")
            button(type="submit",class="btn btn-primary ms-2") Search
        
    table.table
        tr 
            th Avatar
            th Name 
            th  Phone 
            th Action
        each user in users 
            tr 
                td 
                  img(src=user.avatar, width="64")
                td=user.name
                td=user.phone
                td
                    a(href="/users/"+user.id) View
